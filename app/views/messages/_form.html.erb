<%= form_for(@message, html:{class:"form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
  <div class="alert alert-danger">
    <%= alert %>
    <ul>
      <% @message.errors.full_messages.each do |full_message| %>
      <li>
        <%= full_message %>
      </li>
      <% end %>
    </ul>
  </div>
  <% end %>
  
  <div class= "form-group">
    <label class="control-label col-sm-1">
      名前:
    </label>
    <div class="col-sm-11">
      <%= f.text_field :name ,class:"form-control",:maxlength => "20" %>
    </div>
  </div>
  

  <div class="form-group">
    <label class="control-label col-sm-1">
    内容:
    </label>
    <div class="col-sm-11">
      <%= f.text_area :body ,class:"form-control",:size =>"20x3",:maxlength => "100" %>
    </div>
  </div>
  


  <div class="form-group">
   <div class="col-sm-12">
    <%= f.submit class: "btn btn-sm btn-primary pull-right" %>
   </div>
  </div>
  
<% end %>

